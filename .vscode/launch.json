{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Python: Remote Attach",
        "type": "debugpy",
        "request": "attach",
        "connect": {
          "host": "localhost",
          "port": 5678
        },
        "pathMappings": [
          {
            "localRoot": "${workspaceFolder}/backend",
            "remoteRoot": "/app"
          }
        ]
      },

      {
          "name": "run",
          "type": "debugpy",
          "request": "launch",
          "module": "backend.run",
          "console": "integratedTerminal"
      }
    ]
  }